# =============================================================================
# ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your API keys and configuration

# Required API Keys
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
GEMINI_API_KEY=your_gemini_api_key

# Bot Configuration
POLL_INTERVAL=60
ASYNC_MODE=false

# Dashboard Configuration (Optional)
ENABLE_DASHBOARD=false
ENABLE_DASHBOARD_UI=false
DASHBOARD_PORT=8080

# Database Configuration (Optional - for advanced features)
DATABASE_URL=sqlite:///twitter_bot.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///twitter_bot_async.db

# Performance Configuration
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=1000
CIRCUIT_BREAKER_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
